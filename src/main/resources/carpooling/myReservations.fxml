<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="590.0" prefWidth="1014.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.MyReservations">
   <children>
      <HBox layoutX="-2.0" layoutY="-2.0" prefHeight="82.0" prefWidth="1014.0" styleClass="hbox-background" stylesheets="@../style.css">
         <children>
            <ImageView fx:id="icon" fitHeight="25.0" fitWidth="26.0" onMouseClicked="#navigationBack" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@back.png" />
               </image>
               <HBox.margin>
                  <Insets left="10.0" top="25.0" />
               </HBox.margin>
            </ImageView>
            <ImageView fitHeight="70.0" fitWidth="81.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@water-drop.png" />
               </image>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </ImageView>
            <ImageView fitHeight="41.0" fitWidth="31.0" onMouseClicked="#addNavigation" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets left="600.0" right="10.0" top="25.0" />
               </HBox.margin>
               <image>
                  <Image url="@add.png" />
               </image>
            </ImageView>
            <Text fill="#366671" strokeType="OUTSIDE" strokeWidth="0.0" text="Add carpooling">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" top="32.0" />
               </HBox.margin>
            </Text>
            <ImageView fitHeight="41.0" fitWidth="33.0" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets left="30.0" right="10.0" top="25.0" />
               </HBox.margin>
               <image>
                  <Image url="@user.png" />
               </image>
            </ImageView>
            <MenuButton fx:id="menuButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="13.0">
               <items>
                  <MenuItem mnemonicParsing="false" text="Profile settings" />
                  <MenuItem fx:id="carpoolingItem" mnemonicParsing="false" onAction="#navigateToMyCarpoolings" text="My carpoolings" />
                  <MenuItem fx:id="reservationItem" mnemonicParsing="false" text="My reservations">
                     <graphic>
                        <Circle fx:id="notificationDot" fill="RED" radius="5.0" visible="false" />
                     </graphic>
                  </MenuItem>
                  <MenuItem fx:id="loginItem" mnemonicParsing="false" onAction="#navigateToLogin" text="Login" />
               </items>
               <HBox.margin>
                  <Insets right="20.0" top="28.0" />
               </HBox.margin>
            </MenuButton>
         </children>
      </HBox>
      <ScrollPane fx:id="scrollPane" layoutX="73.0" layoutY="80.0" prefHeight="510.0" prefWidth="747.0">
         <content>
            <TilePane fx:id="reservationsContainer" prefHeight="505.0" prefWidth="754.0" styleClass="carpooling-card" stylesheets="@../style.css" />
         </content>
      </ScrollPane>
   </children>
</AnchorPane>
